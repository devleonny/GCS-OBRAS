{
  "name": "grupocostasilva",
  "version": "2.0.59",
  "description": "Gestão de Projetos e Orçamentos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "grupocostasilva",
    "productName": "Orçamentos GCS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "LG.ico"
    },
    "files": [
      "**/*",
      "node_modules/**/*",
      "chrome-win64/**/*"
    ],
    "asarUnpack": [
      "**/chrome-win64/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "devleonny",
        "repo": "dev"
      }
    ],
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "allowElevation": false,
      "perMachine": false
    }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.2.1",
    "exec": "^0.2.1",
    "express": "^4.19.2",
    "filestream": "^5.0.0",
    "google": "^2.1.0",
    "googleapis": "^140.0.1",
    "https": "^1.0.0",
    "node": "^22.6.0",
    "path": "^0.12.7",
    "puppeteer": "^22.15.0",
    "sudo-prompt": "^9.2.1"
  }
}
